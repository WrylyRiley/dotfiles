#!/bin/zsh
#################################
# Required oh-my-zsh export     #
#################################
export ZSH=~/.oh-my-zsh

#################################
# Theming - Cloud               #
#################################
ZSH_THEME="cloud"

#################################
# oh-my-zsh plugins             #
#################################
plugins=(git zsh-syntax-highlighting)
. $ZSH/oh-my-zsh.sh
export NVM_DIR="$HOME/.nvm"
nvm="$NVM_DIR/nvm.sh"
nvmbash="$NVM_DIR/bash_completion"
[[ -s $nvm ]] && . $nvm
[[ -s $nvmbash ]] && . $nvmbash

#################################
# Common aliases                #
#################################
alias zshrc="code ~/.zshrc"
alias ll="ls -lhaG"
alias c="clear"
